<%- model_class = Category -%>
<div class="page-header row">
  <h1>Categories</h1>
  <div class="pull-right">
    <%= form_for Category.new do |f| %>
      <%= f.text_field :title %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<ul>
  <% for category in @categories %>
    <li><%= link_to category.title, "/categories/#{category.id}"%></li>
  <% end %>
</ul>