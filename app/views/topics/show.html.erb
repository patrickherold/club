<h1>Topic: <%= @topic.title %></h1>
<%= form_for Comment.new do |f| %>
  <%= f.label :title %>
  <%= f.text_area :title %>
  <%= f.hidden_field :topic_id, :value => params[:id] %>
  <%= f.submit %>
<% end %>
<ul>
  <% @topic.comments.each do |comment| %>
    <li><%= link_to comment.title, "/comments/#{comment.id}"%></li>
  <% end %>
